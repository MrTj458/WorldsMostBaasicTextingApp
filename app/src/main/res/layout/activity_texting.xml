<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TextingActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="Send"
        android:id="@+id/sendButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:id="@+id/messageBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter message here."/>

    <TextView
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:text="Sent:"
        android:id="@+id/sent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberBox"
        android:layout_above="@+id/messageBox"
        android:layout_centerHorizontal="true"
        android:hint="Number to message"
        android:phoneNumber="false"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:id="@+id/sentText"
        android:layout_below="@+id/sent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Your latest sent message will appear here."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trevor"
        android:id="@+id/number1"
        android:layout_below="@+id/sentText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emily"
        android:id="@+id/number2"
        android:layout_alignBottom="@+id/number1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send a nice message"
        android:id="@+id/niceStuff"
        android:layout_alignBottom="@+id/number2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Made by: cody"
        android:id="@+id/textView"
        android:layout_above="@+id/numberBox"
        android:layout_toRightOf="@+id/number1"
        android:layout_toEndOf="@+id/number1"
        android:layout_marginBottom="64dp"/>

</RelativeLayout>
